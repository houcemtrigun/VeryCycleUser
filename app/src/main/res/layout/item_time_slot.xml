                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/rounded_shap_white_5dp"
                    android:padding="@dimen/_7sdp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:elevation="@dimen/_5sdp" />

                <TextView
                    android:id="@+id/tv0304"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/rounded_shap_white_5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_7sdp"
                    android:text="3 pm to 4 pm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:elevation="@dimen/_5sdp" />

                <TextView
                    android:id="@+id/tv0405"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4 pm to 5 pm"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/rounded_shap_white_5dp"
                    android:padding="@dimen/_7sdp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:elevation="@dimen/_5sdp" />

                <TextView
                    android:id="@+id/tv0506"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 pm to 6 pm"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/rounded_shap_white_5dp"
                    android:padding="@dimen/_7sdp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:elevation="@dimen/_5sdp" />

                <TextView
                    android:id="@+id/tv0607"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6 pm to 7 pm"
                    android:layout_marginTop="@dimen/_9sdp"
