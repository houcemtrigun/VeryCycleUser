<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosingTypeOfride">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/ic_previous">

        </ImageView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsmedium"
            android:text="Choosing the type of repair"
            android:textColor="#fff"
            android:textSize="@dimen/_15sdp">

        </TextView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginTop="@dimen/_38sdp"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:padding="@dimen/_35sdp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="#C4C4C4">


         <!--   <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="-5dp"
                android:layout_gravity="end"
                android:src="@drawable/camera">

            </ImageView>-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_45sdp">

                <ImageView
                    android:layout_width="@dimen/_115sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/camera">

                </ImageView>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:background="#878789">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:padding="@dimen/_8sdp"
                android:textColor="#fff"
                android:fontFamily="@font/poppinsmedium"
                android:text="Upload Cycle Image">

            </TextView>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/email_li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/btn_bg"
        android:orientation="horizontal"
        android:layout_below="@id/linear"
        android:padding="@dimen/_10sdp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center_horizontal"
            android:text="Continue"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>


</RelativeLayout>